!!! 5
%html
  %head
    %script{ :src => 'https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js', :type => 'text/javascript'}
    %script{ :src => '../lib/easel.js', :type => 'text/javascript' }
  %body
    #easel

    :javascript
      var my_easel = new Easel.Easel('easel');
      my_easel.addLayers([
        new Easel.Layer({ id: 'back', index: 1 }),
        new Easel.Layer({ id: 'middle', index: 2 }),
        new Easel.Layer({ id: 'front', index: 3 })
      ]);

      my_easel.setup();
      my_easel.draw();
